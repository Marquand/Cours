<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true">

        <TextView android:text="Hello World!" android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/Ecran"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridLayout"
            android:layout_below="@+id/Ecran"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="clickButtonPlus" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/buttonMoins"
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="clickButtonMoins" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/buttonMulti"
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="clickButtonMulti" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/buttonDiv"
                android:layout_row="0"
                android:layout_column="3"
                android:onClick="clickButtonDiv" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/buttonSept"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="clickButtonSept" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/buttonHuit"
                android:layout_row="1"
                android:layout_column="1"
                android:onClick="clickButtonHuit" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/buttonNeuf"
                android:layout_row="1"
                android:layout_column="2"
                android:onClick="clickButtonNeuf" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/buttonQuatre"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="clickButtonQuatre" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/buttonCinq"
                android:layout_row="2"
                android:layout_column="1"
                android:onClick="clickButtonCinq" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/buttonSix"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="clickButtonSix" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/buttonUn"
                android:layout_row="3"
                android:layout_column="0"
                android:onClick="clickButtonUn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/buttonDeux"
                android:layout_row="3"
                android:layout_column="1"
                android:onClick="clickButtonDeux" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/buttonTrois"
                android:layout_row="3"
                android:layout_column="2"
                android:onClick="clickButtonTrois" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/buttonZero"
                android:layout_row="4"
                android:layout_column="0"
                android:onClick="clickButtonZero" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/buttonPoint"
                android:layout_row="4"
                android:layout_column="1"
                android:onClick="clickButtonPoint" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/buttonEgale"
                android:layout_row="4"
                android:layout_column="2"
                android:onClick="clickButtonEgale" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/buttonClear"
                android:layout_row="4"
                android:layout_column="3"
                android:onClick="clickButtonClear" />
        </GridLayout>
    </LinearLayout>

</RelativeLayout>
